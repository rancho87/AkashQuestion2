
import java.util.*;

public class MyClass {
    
    public static int KthSmallestNumberInArray(int[] arr , int k){
        Arrays.sort(arr);
        return arr[k-1];
    }
    
    public static void main(String args[]) {
      
       int [] arr ={4 , 5, 3 , 1 , 2 };
       int result = MyClass.KthSmallestNumberInArray(arr ,3);
       System.out.print(result);
    }
}
